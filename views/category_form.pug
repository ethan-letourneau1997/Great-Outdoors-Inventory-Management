extends layout

block content
  h1.title-med.d-none.d-sm-block #{title}

  form.category-form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Camping, Hiking etc.' name='name' value=(undefined===category ? '' : category.name))
    button.btn.btn-success(type='submit') Submit
    a.btn.btn-info.cancel-butn(onclick="history.back()") Cancel

  if errors
   ul
    for error in errors
     li!= error.msg